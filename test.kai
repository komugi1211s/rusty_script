// Declaration

a: int = 10;
b: float = 1.5;
c: string = "hello";
d: bool = true;

// Nullables
an: int?;
bn: float?;
cn: string?;
dn: bool?;

// Inferred
ai := 10;
bi := 1.5;
ci := "hall";
di := false;

// Ordering / Eq
assert(true);
assert(!false);
assert(10 == 10);
assert(1.5 == 1.5);
assert("hello" == "hello");
assert(true == true);

assert(1 < 2);
assert(-5 < 0);
assert(1.3 < 2);
assert(-5 < -2.5);

assert(2 > 1);
assert(0 > -5);
assert(2 > 1.9);
assert(0 > -5);

assert(1 >= 1);
assert(1 <= 1);

// Addition
assert((10 + 5) == 15);
assert((1.0 + 5.3) == 6.3);
assert(("hello" + "world") == "helloworld");

test_start: () {
    print "\n";
}

test_start();
